<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".RangingActivity">


    <TextView
        android:id="@+id/rangingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72dp"
        android:gravity="center"/>


    <RelativeLayout
        android:id="@+id/arrived_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arrived_bg"
        android:layout_marginTop="40dp"
        android:layout_above="@id/rangingText"
        android:padding="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your bag is here!"
            android:textSize="36dp"
            android:id="@+id/lg_title_1"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</RelativeLayout>